<UserControl x:Class="WindowsAudioSession.UI.SoundWave.SoundWaveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsAudioSession.UI.SoundWave" 
             d:DataContext="{d:DesignInstance Type=local:SoundWaveViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas Grid.Row="1"
            x:Name="WaveGraph"
            Background="{Binding DrawBackground, 
                RelativeSource={RelativeSource AncestorType=UserControl}}"
            />
    </Grid>
    
</UserControl>
