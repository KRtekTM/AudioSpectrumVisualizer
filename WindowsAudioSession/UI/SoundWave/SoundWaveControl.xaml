<UserControl x:Class="WindowsAudioSession.UI.SoundWave.SoundWaveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsAudioSession.UI.SoundWave" 
             d:DataContext="{d:DesignInstance Type=local:SoundWaveViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Black">
    <Grid>
        <TextBlock Foreground="White"
                   Name="TextPeakLevelMeter"
                   Width="{Binding LabelWidth,FallbackValue=*}" 
                   Text="{Binding Label,FallbackValue=SOUND WAVE VISUALIZER}"
                   Margin="1,8,4,0" 
                   Grid.Row="0"
                   TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontFamily="Parsi" FontSize="10"/>
        <Canvas Grid.Row="1"
            x:Name="WaveGraph"
            />
    </Grid>
    
</UserControl>
